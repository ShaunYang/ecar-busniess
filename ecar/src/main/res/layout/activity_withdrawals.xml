<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/layTitle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white_FFFFFF">
        <LinearLayout 
            android:id="@+id/layBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_back"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_marginLeft="5dp"
            	android:textColor="@color/red_FF3300"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myAccount"
            android:textSize="15sp"
            android:textColor="@color/red_FF3300"
            android:layout_centerInParent="true"/>
        <Button 
            android:id="@+id/btnPhone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_phone"/>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white_FFFFFF">
        <TextView 
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawalsCnt"
            android:layout_marginLeft="20dp"/>
        <TextView 
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textBalance"
            android:text="@string/moneyIcon"
            android:textColor="@color/red_FF3300"/>
        <TextView 
            android:id="@+id/textBalance"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/red_FF3300"/>
    </RelativeLayout>
    
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="@color/line_color"/>
	
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white_FFFFFF">
        <TextView 
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money"
            android:layout_marginLeft="20dp"/>
        <EditText 
            android:id="@+id/editWithdrawalsCnt"
            android:gravity="center_vertical|right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/app_no_color"
            android:hint="@string/inputWithdrawalsCnt"
            android:layout_marginRight="20dp"
            android:textSize="13sp"/>
    </LinearLayout>
    
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="@color/line_color"/>
	
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white_FFFFFF">
        <TextView 
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inputWithdrawalsPwd"
            android:layout_marginLeft="20dp"/>
        <EditText 
            android:id="@+id/editWithdrawalsPwd"
            android:gravity="center_vertical|right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/app_no_color"
            android:hint="@string/inputWithdrawalsPwd"
            android:layout_marginRight="20dp"
            android:textSize="13sp"/>
    </LinearLayout>
    
	<Button 
	    android:id="@+id/btnSure"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_margin="30dp"
	    android:text="@string/sureWithdrawals"
	    android:textColor="@color/white_FFFFFF"
	    android:background="@layout/btn_red"/>
</LinearLayout>